<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelActivity">

    <Button
        android:id="@+id/buttonViewHotel"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="25dp"
        android:text="View Hotel" />

    <EditText
        android:id="@+id/editTextHotelDay"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Enter day"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewHotelName"
        android:layout_width="232dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="104dp"
        android:text="XXX"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHotelAddress"
        android:layout_width="231dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/textViewHotelName"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="2dp"
        android:layout_marginTop="0dp"
        android:text="XXX"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHotelLink"
        android:layout_width="235dp"
        android:layout_height="125dp"
        android:layout_alignStart="@+id/editTextHotelDay"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="40dp"
        android:text="XXX"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHotelDate"
        android:layout_width="232dp"
        android:layout_height="56dp"
        android:layout_alignStart="@+id/textViewHotelName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="189dp"
        android:text="XXX"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="106dp"
        android:text="Hotel:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewHotelDate"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginEnd="0dp"
        android:text="Date:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"
        android:text="Address:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHotelAddress"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="Link:"
        android:textSize="18sp" />

</RelativeLayout>