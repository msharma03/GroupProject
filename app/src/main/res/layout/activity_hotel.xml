<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelActivity">

    <Button
        android:id="@+id/buttonViewHotel"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="25dp"
        android:text="View Hotel" />

    <EditText
        android:id="@+id/editTextHotelDay"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Enter day"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewHotelName"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="145dp"
        android:text="Hotel: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHotelAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewHotelName"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-21dp"
        android:layout_marginTop="210dp"
        android:text="Address:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHotelLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextHotelDay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:text="Link:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHotelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewHotelName"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="166dp"
        android:text="Date:"
        android:textSize="18sp" />

</RelativeLayout>